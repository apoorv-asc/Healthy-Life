    <link rel="shortcut icon" href="/assets/images/favicon.png" />
    <script>
        const cal = "<%= Calories %>"
        var move_mins = "<%= Move_Mins %>"
        var distance = "<%= Distance %>"
        var Dates = ("<%= Dates %>".replace(/(^,)|(,$)/g, "")).split(",");
    </script>
  </head>
  <body>
    <div class="container-scroller">
      <!-- partial:partials/_sidebar.html -->
      <%- include("partials/navbar") %>
        <!-- partial -->
        <div class="main-panel">
          <div class="content-wrapper pb-0">
            <!-- basic user info -->
            <div class="row">
              <div class="col-lg-3 grid-margin stretch-card">
                <div class="card usrInfo">
                  <div class="card-body">
                    <h6 class="heading">Height</h6>
                    167 cm
                  </div>
                </div>
              </div>
              <div class="col-lg-3 grid-margin stretch-card">
                <div class="card usrInfo">
                  <div class="card-body">
                    <h6 class="heading">Weight</h6>
                    56 kg
                  </div>
                </div>
              </div>
              <div class="col-lg-3 grid-margin stretch-card">
                <div class="card usrInfo">
                  <div class="card-body">
                    <h6 class="heading">Blood Group</h6>
                    B+
                  </div>
                </div>
              </div>
              <div class="col-lg-3 grid-margin stretch-card">
                <div class="card usrInfo">
                  <div class="card-body">
                    <h6 class="heading">Blood Pressure</h6>
                    117 systolic <br>
                    67 diastolic
                  </div>
                </div>
              </div>
            </div>

            <!-- user activities info -->
            <!-- basic user info -->
            <div class="row">
              <div class="col-lg-4 grid-margin stretch-card">
                <div class="card healthInfo">
                  <div class="card-body">
                    <h6 class="heading">Calories Burnt</h6>
                    <canvas id="caloriesBurnt" height="200px"></canvas>
                  </div>
                </div>
              </div>
              <div class="col-lg-4 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body healthInfo">
                    <h6 class="heading">Distance Covered</h6>
                    <canvas id="distanceCovered" height="200px"></canvas>
                  </div>
                </div>
              </div>
              <div class="col-lg-4 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body healthInfo">
                    <h6 class="heading">Move Mins</h6>
                    <canvas id="moveMins" height="200px"></canvas>
                  </div>
                </div>
              </div>
            </div>
            
            <!-- set goal -->
            <div class="row">
              <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <div class="row">
                      <div class="col-lg-3 stretch-card"  class="setGoal">
                        <img src="/assets/images/fitbit/goal.png" height="200px" width="200px">
                      </div>
                      <div class="col-lg-9 stretch-card"  class="setGoal">
                        Set goal
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- content-wrapper ends -->
          <!-- partial:partials/_footer.html -->
          <footer class="footer">
            <div class="d-sm-flex justify-content-center justify-content-sm-between">
              <span class="text-muted text-center text-sm-left d-block d-sm-inline-block">Copyright Â© 2021 <a href="https://www.bootstrapdash.com/" target="_blank">BootstrapDash</a>. All rights reserved.</span>
              <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center">Hand-crafted & made with <i class="mdi mdi-heart text-danger"></i></span>
            </div>
          </footer>
          <!-- partial -->
        </div>
        <!-- main-panel ends -->
      </div>
      <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="/assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <script src="/assets/vendors/jquery-bar-rating/jquery.barrating.min.js"></script>
    <script src="/assets/vendors/chart.js/Chart.min.js"></script>
    <script src="/assets/vendors/flot/jquery.flot.js"></script>
    <script src="/assets/vendors/flot/jquery.flot.resize.js"></script>
    <script src="/assets/vendors/flot/jquery.flot.categories.js"></script>
    <script src="/assets/vendors/flot/jquery.flot.fillbetween.js"></script>
    <script src="/assets/vendors/flot/jquery.flot.stack.js"></script>
    <script src="/assets/js/jquery.cookie.js" type="text/javascript"></script>
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="/assets/js/off-canvas.js"></script>
    <script src="/assets/js/hoverable-collapse.js"></script>
    <script src="/assets/js/misc.js"></script>
    <script src="/assets/js/settings.js"></script>
    <script src="/assets/js/todolist.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page -->
    <script src="/assets/js/dashboard.js"></script>
    <!-- End custom js for this page -->



    <!-- charts data -->
    <script>
      var myChart = new Chart("caloriesBurnt", {
        type: 'bar',
        data: {
            labels: Dates,
            datasets: [{
                label: 'Calories Burnt in kcal',
                data: cal.split(",").map(Number),
                backgroundColor: '#fce2dc',
                borderColor: '#FF704F',
                borderRadius: 5,
                borderWidth: 1
            },
          ]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            },
            animation: {
              animateScale: true,
              animateRotate: true
            }
        }
      });

      var xValues = Dates;
      var yValues = distance.split(",").map(Number)
      var myChart = new Chart("distanceCovered", {
      type: "line",
      
      data: {
          labels: xValues,
          legend: {
            display: true,
            legendText : ['xyz']
          }, 
          datasets: [{
            backgroundColor: '#fce2dc',
            borderColor: '#FF704F',
            label: 'Distance Covered',
            data: yValues,
            fill: false,
            tension: 0.2,
          }]
      },
      //   fill: false,
      options: {
          scales: {
                  y: {
                      beginAtZero: true
                  }
              }
      }
    });
    var myChart = new Chart("moveMins", {
        type: 'bar',
        data: {
            labels: Dates,
            datasets: [{
                label: 'move mins per day',
                data: move_mins.split(",").map(Number),
                backgroundColor: '#fce2dc',
                borderColor: '#FF704F',
                borderRadius: 5,
                borderWidth: 1
            },
          ]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            },
            animation: {
              animateScale: true,
              animateRotate: true
            }
        }
      });

  </script>
  </body>
</html>