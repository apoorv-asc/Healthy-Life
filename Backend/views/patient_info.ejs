    <script>
      var heart_points = "<%= heart_points %>"
      var steps = "<%= steps %>"
      var Dates = ("<%= Dates %>".replace(/(^,)|(,$)/g, "")).split(",");
      const cal = "<%= Calories %>"
      var move_mins = "<%= Move_Mins %>"
      var distance = "<%= Distance %>"
    </script>
  </head>
  <body>
    <div class="container-scroller">
      <!-- partial:partials/_sidebar.html -->
      <%- include("partials/navbar") %>
        <!-- partial -->
        <div class="main-panel">
          <div class="content-wrapper pb-0">
            <h2>Patient Health Info</h2>
            <h4>Patient Name</h4>

            <!-- basic user info -->
            <div class="row">
              <div class="col-lg-3 grid-margin stretch-card">
                <div class="card usrInfo">
                  <div class="card-body">
                    <h6 class="heading">Height</h6>
                    167 cm
                  </div>
                </div>
              </div>
              <div class="col-lg-3 grid-margin stretch-card">
                <div class="card usrInfo">
                  <div class="card-body">
                    <h6 class="heading">Weight</h6>
                    56 kg
                  </div>
                </div>
              </div>
              <div class="col-lg-3 grid-margin stretch-card">
                <div class="card usrInfo">
                  <div class="card-body">
                    <h6 class="heading">Blood Group</h6>
                    B+
                  </div>
                </div>
              </div>
              <div class="col-lg-3 grid-margin stretch-card">
                <div class="card usrInfo">
                  <div class="card-body">
                    <h6 class="heading">Blood Pressure</h6>
                    117 systolic <br>
                    67 diastolic
                  </div>
                </div>
              </div>
            </div>

            <!-- user activities info -->
            <!-- basic user info -->

            <div class="row">
                <div class="col-sm-6 stretch-card grid-margin">
                  <div class="card">
                    <div class="card-body">
                      <div class="d-flex justify-content-between">
                        <div class="card-title"><span style="color:orangered">Heart Points</span> <small class="d-block text-muted">Last 7 Days</small>
                        </div>
                      </div>
                      <h3 class="font-weight-bold mb-0"><span class="text-success h5"><i class="mdi mdi-heart-outline"></i><%= heart_score%> pts</span>
                      </h3>
                      <div class="line-chart-wrapper" id="showGraph">
                        <canvas id="heartPoints" height="150px"></canvas>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-sm-6 stretch-card grid-margin">
                  <div class="card">
                    <div class="card-body">
                      <div class="d-flex justify-content-between">
                        <div class="card-title"><span style="color:orangered"> Steps</span> <small class="d-block text-muted">Last 7 Days</small>
                        </div>
                      </div>
                      <h3 class="font-weight-bold mb-0"><span class="text-success h5"><i class="mdi mdi-walk"></i><%= total_steps %> Steps</span>
                      </h3>
                      <div class="bar-chart-wrapper">
                        <canvas id="steps" height="150px"></canvas>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <div class="row">
              <div class="col-lg-4 grid-margin stretch-card">
                <div class="card healthInfo">
                  <div class="card-body">
                    <h6 class="heading">Calories Burnt</h6>
                    <canvas id="caloriesBurnt" height="200px"></canvas>
                  </div>
                </div>
              </div>
              <div class="col-lg-4 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body healthInfo">
                    <h6 class="heading">Distance Covered</h6>
                    <canvas id="distanceCovered" height="200px"></canvas>
                  </div>
                </div>
              </div>
              <div class="col-lg-4 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body healthInfo">
                    <h6 class="heading">Move Mins</h6>
                    <canvas id="moveMins" height="200px"></canvas>
                  </div>
                </div>
              </div>
            </div>

            <!-- set goal -->
          </div>
          <!-- content-wrapper ends -->
          <!-- partial:partials/_footer.html -->
          <!-- partial -->
        </div>
        <!-- main-panel ends -->
      </div>
      <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script>
      function changeText(){
        var element = document.getElementById("setGoal");
        element.innerHTML = '<div class="row"><div class="col-md-3"><p>Activity</p><h5>Paced Walking</h5></div><div class="col-md-3"><p>Steps</p><h5>4000 steps</h5></div><div class="col-md-3"><p>Distance</p><h5>3 km</h5></div><div class="col-md-3"><p>Energy Expanded</p><h5>1500 calories</h5></div></div>';
    }
    </script>

    <script src="/assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <script src="/assets/vendors/jquery-bar-rating/jquery.barrating.min.js"></script>
    <script src="/assets/vendors/chart.js/Chart.min.js"></script>
    <script src="/assets/vendors/flot/jquery.flot.js"></script>
    <script src="/assets/vendors/flot/jquery.flot.resize.js"></script>
    <script src="/assets/vendors/flot/jquery.flot.categories.js"></script>
