    <script src="/assets/js/misc.js"></script>
    <script src="/assets/js/settings.js"></script>
    <script src="/assets/js/todolist.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page -->
    <script src="/assets/js/dashboard.js"></script>
    <!-- End custom js for this page -->



    <!-- charts data -->
    <script>
      var myChart = new Chart("caloriesBurnt", {
        type: 'bar',
        data: {
            labels: Dates,
            datasets: [{
                label: 'Calories Burnt in kcal',
                data: cal.split(",").map(Number),
                backgroundColor: '#fce2dc',
                borderColor: '#FF704F',
                borderRadius: 5,
                borderWidth: 1
            },
          ]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            },
            animation: {
              animateScale: true,
              animateRotate: true
            }
        }
      });

      var xValues = Dates;
      var yValues = distance.split(",").map(Number);
      var myChart = new Chart("distanceCovered", {
      type: "line",
      
      data: {
          labels: xValues,
          legend: {
            display: true,
            legendText : ['xyz']
          }, 
          datasets: [{
            backgroundColor: '#fce2dc',
            borderColor: '#FF704F',
            label: 'Distance Covered',
            data: yValues,
            fill: false,
            tension: 0.2,
          }]
      },
      //   fill: false,
      options: {
          scales: {
                  y: {
                      beginAtZero: true
                  }
              }
      }
    });
    var myChart = new Chart("moveMins", {
        type: 'bar',
        data: {
            labels: Dates,
            datasets: [{
                label: 'move mins per day',
                data: move_mins.split(",").map(Number),
                backgroundColor: '#fce2dc',
                borderColor: '#FF704F',
                borderRadius: 5,
                borderWidth: 1
            },
          ]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            },
            animation: {
              animateScale: true,
              animateRotate: true
            }
        }
      });

  </script>
  <script>
    console.log(Dates);
    var myChart = new Chart("heartPoints", {
      type: 'bar',
      data: {
          labels: Dates,
          datasets: [{
              label: 'Heart Points',
              data: heart_points.split(",").map(Number),
              backgroundColor: '#fce2dc',
              borderColor: '#FF704F',
              borderRadius: 5,
              borderWidth: 1
          },
        ]
      },
      options: {
          scales: {
              y: {
                  beginAtZero: true
              }
          },
          animation: {
            animateScale: true,
            animateRotate: true
          }
      }
    });
    var xValues = Dates;
    var yValues = steps.split(",").map(Number);
    var myChart = new Chart("steps", {
    type: "line",
    
    data: {
        labels: xValues,
        legend: {
          display: true,
          legendText : ['xyz']
        }, 
        datasets: [{
          backgroundColor: '#fce2dc',
          borderColor: '#FF704F',
